@model Lab4.Department

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити цей запис?</h3>
<div>
    <h4>Кафедра</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Faculty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Faculty.FacultyName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        @if (@Model.People.Count == 0)
        {
            <input type="submit" value="Видалити" class="btn btn-danger" />
        }
        else
        {
            <span title="Не можна видалити, бо до цієї кафедри прив'язані працівники.">
                <input type="submit" value="Видалити" class="btn btn-danger" disabled />
            </span>
        }

        <span>|</span>

        @if (ViewBag.FacultyName == null)
        {
            <a asp-controller="Departments" asp-action="Index">Назад до списку усіх кафедр</a>
        }
        else
        {
            <a asp-action="Index" asp-route-id="@Model.FacultyId" asp-route-name="@Model.Faculty.FacultyName">Назад до списку кафедр</a>
        }
    </form>
</div>
