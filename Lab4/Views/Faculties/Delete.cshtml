@model Lab4.Faculty

@{
    ViewData["Title"] = "Видалити";
}

<h1>Видалити</h1>

<h3>Ви впевнені, що хочете видалити цей запис?</h3>
<div>
    <h4>Факультет</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacultyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacultyName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (@Model.Departments.Count == 0)
        {
            <input type="submit" value="Видалити" class="btn btn-danger" />
        }
        else
        {
            <span title="Не можна видалити, бо до цього факультета прив'язані кафедри.">
                <input type="submit" value="Видалити" class="btn btn-danger" disabled />
            </span>
        }
        <span>|</span>
        <a asp-action="Index">Назад до списку факультетів</a>
    </form>
</div>
